<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:xBot">
    
    <Color x:Key="BackgroundMain">#333</Color>
    <SolidColorBrush x:Key="BackgroundMainBrush" Color="{StaticResource BackgroundMain}"/>

    <Color x:Key="BackgroundDarker">#222</Color>
    <SolidColorBrush x:Key="BackgroundDarkerBrush" Color="{StaticResource BackgroundDarker}"/>

    <Color x:Key="BackgroundLighter">#444</Color>
    <SolidColorBrush x:Key="BackgroundLighterBrush" Color="{StaticResource BackgroundLighter}"/>

    <Color x:Key="ForegroundMain">#FFF</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}"/>

    <Color x:Key="ForegroundMainInversed">#000</Color>
    <SolidColorBrush x:Key="ForegroundMainInversedBrush" Color="{StaticResource ForegroundMainInversed}"/>

    <Color x:Key="ForegroundMainDisabled">#535353</Color>
    <SolidColorBrush x:Key="ForegroundMainDisabledBrush" Color="{StaticResource ForegroundMainDisabled}"/>
    
    <Color x:Key="HighlightMain">#007AFF</Color>
    <SolidColorBrush x:Key="HighlightMainBrush" Color="{StaticResource HighlightMain}"/>

    <Color x:Key="BorderMain">#666</Color>
    <SolidColorBrush x:Key="BorderMainBrush" Color="{StaticResource BorderMain}"/>


</ResourceDictionary>