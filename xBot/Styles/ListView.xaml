<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:xBot">

    <!-- ListView for base application  -->
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseFontStyle}">
        <Setter Property="Background" Value="{StaticResource BackgroundDarkerBrush}"/>
    </Style>

    <!-- ListView Header for base application  -->
    <Style TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Foreground="{StaticResource BackgroundDarkerBrush}" Text="{Binding}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>